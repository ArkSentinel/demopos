<h1 class="mb-4"><i class="bi bi-receipt-cutoff"></i> Ventas</h1>

<!-- Filtros -->
<div class="card mb-4 shadow-sm">
  <div class="card-body">
    <%= form_with url: sales_path, method: :get, local: true, class: "row g-3" do |f| %>
      <div class="col-md-4">
        <%= f.label :q, "Buscar por ID o total", class: "form-label" %>
        <%= f.text_field :q, value: params[:q], class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.label :category_id, "CategorÃ­a", class: "form-label" %>
        <%= f.collection_select :category_id, Category.all, :id, :name,
              { include_blank: "Todas" },
              { class: "form-select", selected: params[:category_id] } %>
      </div>
      <div class="col-md-4 d-flex align-items-end">
        <%= f.submit "Filtrar", class: "btn btn-primary me-2" %>
        <%= link_to "Limpiar", sales_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Tabla de ventas -->
<table class="table table-striped table-hover shadow-sm">
  <thead class="table-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Total</th>
      <th scope="col">Fecha</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= link_to sale.id, sale_path(sale), class: "text-decoration-none" %></td>
        <td><%= number_to_currency(sale.total) %></td>
        <td><%= sale.created_at.strftime("%d/%m/%Y %H:%M") %></td>
        <td>
          <%= link_to sale_path(sale), class: "btn btn-info btn-sm" do %>
            <i class="bi bi-file-earmark-text"></i> Ver recibo
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
