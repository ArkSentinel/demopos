<p class="text-success"><%= notice %></p>

<h1 class="mb-4"><i class="bi bi-box"></i> Producto</h1>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <p><strong>ID:</strong> <%= @product.id %></p>
    <p><strong>Nombre:</strong> <%= @product.name %></p>
    <p><strong>Precio:</strong> <%= number_to_currency(@product.price) %></p>
    <p><strong>Stock:</strong> <%= @product.quantity %></p>
    <p><strong>Categoría:</strong> <%= @product.category&.name || "Sin categoría" %></p>
    <p><strong>Última actualización:</strong> <%= @product.updated_at.strftime("%d/%m/%Y %H:%M") %></p>
  </div>
</div>

<div class="d-flex gap-2">
  <%= link_to "<i class='bi bi-pencil'></i> Editar".html_safe, edit_product_path(@product), class: "btn btn-warning" %>
  <%= link_to "<i class='bi bi-arrow-left'></i> Volver al inventario".html_safe, inventory_index_path, class: "btn btn-secondary" %>
  <%= button_to "<i class='bi bi-trash'></i> Eliminar".html_safe, @product,
                method: :delete,
                data: { confirm: "¿Seguro que deseas eliminar #{@product.name}?" },
                class: "btn btn-danger" %>
</div>
