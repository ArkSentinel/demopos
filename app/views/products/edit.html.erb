<% content_for :title, "Editar producto" %>

<h1 class="mb-4"><i class="bi bi-pencil"></i> Editar producto</h1>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <%= render "form", product: @product %>
  </div>
</div>

<div class="d-flex gap-2 mt-3">
  <%= link_to "<i class='bi bi-eye'></i> Ver producto".html_safe, @product, class: "btn btn-info" %>
  <%= link_to "<i class='bi bi-arrow-left'></i> Volver al inventario".html_safe, inventory_index_path, class: "btn btn-secondary" %>

</div>
