<p class="text-success"><%= notice %></p>

<h1 class="mb-4"><i class="bi bi-tag"></i> Categoría</h1>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <p><strong>ID:</strong> <%= @category.id %></p>
    <p><strong>Nombre:</strong> <%= @category.name %></p>
    <p><strong>Creada:</strong> <%= @category.created_at.strftime("%d/%m/%Y %H:%M") %></p>
    <p><strong>Última actualización:</strong> <%= @category.updated_at.strftime("%d/%m/%Y %H:%M") %></p>
  </div>
</div>

<div class="d-flex gap-2">
  <%= link_to "<i class='bi bi-pencil'></i> Editar".html_safe, edit_category_path(@category), class: "btn btn-warning" %>
  <%= link_to "<i class='bi bi-arrow-left'></i> Volver".html_safe, categories_path, class: "btn btn-secondary" %>
  <%= button_to "<i class='bi bi-trash'></i> Eliminar".html_safe, @category,
                method: :delete,
                data: { confirm: "¿Seguro que deseas eliminar #{@category.name}?" },
                class: "btn btn-danger" %>
</div>
