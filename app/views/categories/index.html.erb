<p class="text-success"><%= notice %></p>

<% content_for :title, "Categorías" %>

<h1 class="mb-4"><i class="bi bi-tags"></i> Categorías</h1>

<div class="mb-3">
  <%= link_to "<i class='bi bi-plus-circle'></i> Nueva categoría".html_safe, new_category_path, class: "btn btn-success" %>
</div>

<table class="table table-striped table-hover shadow-sm">
  <thead class="table-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Última actualización</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= category.updated_at.strftime("%d/%m/%Y %H:%M") %></td>
        <td class="d-flex gap-2">
          <%= link_to "<i class='bi bi-eye'></i> Ver".html_safe, category_path(category), class: "btn btn-info btn-sm" %>
          <%= link_to "<i class='bi bi-pencil'></i> Editar".html_safe, edit_category_path(category), class: "btn btn-warning btn-sm" %>
          <%= link_to "<i class='bi bi-trash'></i> Eliminar".html_safe, category_path(category),
                      method: :delete,
                      data: { confirm: "¿Seguro que deseas eliminar #{category.name}?" },
                      class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
